<%- layout("layouts/boilerplate.ejs") %>
    <h1>All campgrounds</h1>
        <% for (let campground of campgrounds) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class= "img-fluid"src="<%= campground.image %>" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/campgrounds/<%= campground._id %>" class="text-decoration-none">
                                    <%= campground.title %>
                                </a>
                            </h5>
                        </div>
                    </div>
                </div>

            </div>
            <% } %>